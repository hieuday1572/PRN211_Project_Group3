@model IEnumerable<PRN211_Project_Group3.Models.Combo>
@inject IHttpContextAccessor Accessor
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/user-details.css">
</head>

<body>

    <div class="curri-details">
        <div class="navbar">
            <img src="~/image/istockphoto-1138089745-170667a.jpg" class="logo">
            <ul>
                @if (Accessor.HttpContext.Session.GetString("Username") != null)
                {
                    <ul>
                        <li><a asp-controller="UserHome" asp-action="Index">Home</a></li>
                    </ul>
                }
                else
                {
                }
                <li><a asp-controller="UserCurriculum"  asp-action="Detail" asp-route-id="@ViewBag.Currii.CurriculumId">Back</a></li>
            </ul>
        </div>
        <div class="content">
            <b>
                <h1>Learning Materials Management</h1>
                <p>List Combos</p>
            </b>
        </div>

        <table class="table">
            <thead>
                <tr>
                    <th>CuriCulum ID</th>
                    <td>@ViewBag.Currii.CurriculumId</td>
                </tr>
            </thead>
            <tr>
                <th>CurriCulum Code</th>
                <td>@ViewBag.Currii.CurriculumCode</td>
            </tr>
            <tr>
                <th>CurriCulum Name</th>
                <td>@ViewBag.Currii.NameEn</td>
            </tr>
        </table class="table-2">
        <div class="table-container">
            <table class="table-2">
                <thead>
                    <tr>
                        <th>Combo ID</th>
                        <th>Combo Name</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td><a asp-action="DetailCombo" asp-route-id="@item.ComboId">@item.ComboId</a></td>
                        <td><a asp-action="DetailCombo" asp-route-id="@item.ComboId">@item.ComboNameEn</a></td>
                    </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>