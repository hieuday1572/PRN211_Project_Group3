@model IEnumerable<PRN211_Project_Group3.Models.ComboSubject>
@inject IHttpContextAccessor Accessor
@{
    Layout = null;
}
<!DOCTYPE html>
<html>

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" />
    <link rel="stylesheet" href="~/css/user-details.css">
    <title>ListCombo</title>
</head>

<body>

    <div class="curri-details">
        <div class="navbar">
            <img src="~/image/istockphoto-1138089745-170667a.jpg" class="logo">
            
                
                    <ul>
                @if (Accessor.HttpContext.Session.GetString("Username") != null)
                {
                    <ul>
                        <li><a asp-controller="UserHome" asp-action="Index">Home</a></li>
                    </ul>
                }
                else
                {
                }
                <li><a asp-action="ListCombo" asp-route-id="@ViewBag.Combosub.CurriculumId">Back</a></li>
                    </ul>
                
                
                
           
        </div>
        <div class="content">
            <b>
                <h1>Learning Materials Management</h1>
                <p>Combo Details</p>
            </b>
        </div>
       
        <table class="table">
            <thead>
                <tr>
                    <th>ComboName</th>
                    <td>@ViewBag.Combosub.ComboNameEn</td>
                </tr>
            </thead>
            <tr>
                <th>Note</th>
                <td>@ViewBag.Combosub.Note</td>
            </tr>
        </table>
        <div class="table-container">
            &nbsp;
            <table class="table-2">
                <thead>
                    <tr>
                        <th>ID</th>
                        <th>Subject Code</th>
                        <th>Subject Name</th>
                        <th>Note</th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.id</td>
                        <td>@item.SubjectCode</td>
                        <td>@item.Subject.SubjectNameEn</td>
                        <td>@item.Combo.Note</td>
                    </tr>
                }
            </table>
        </div>
    </div>
</body>
</html>
