@model PRN211_Project_Group3.Models.MaterialOfTeacher
@inject IHttpContextAccessor Accessor
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Create</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/5.0.2/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/delete.css">
</head>
<body>
    <div class="color">
        <h1>MaterialOfTeacher</h1>
    </div>
    <div class="container-center">

        @if (TempData["error"] != null)
        {
            <div class="error-message">
                <span style="color:red"><b>Sorry!</b> - @TempData["error"]</span>
            </div>
        }
        <div class="col-md-4">
            <div class="square-container">
                <form asp-action="Create">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <div class="form-group mb-3">
                        <label asp-for="Description" class="control-label"></label>
                        <input asp-for="Description" class="form-control" />
                        <span asp-validation-for="Description" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="TeacherUsername" class="control-label"></label>
                        <input asp-for="TeacherUsername" readonly value="@Accessor.HttpContext.Session.GetString("Username")" class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="SubjectCode" class="control-label"></label>
                        <input asp-for="SubjectCode" required class="form-control" />
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="URL" class="control-label"></label>
                        <input asp-for="URL" required class="form-control" />
                        <span asp-validation-for="URL" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <label asp-for="Status" class="control-label"></label>
                        <input asp-for="Status" readonly value="waiting" class="form-control" />
                        <span asp-validation-for="Status" class="text-danger"></span>
                    </div>
                    <div class="form-group mb-3">
                        <input type="submit" value="Create" class="btn btn-success btn btn-primary" /> |
                        <a asp-action="Index" class="btn btn-primary">Back to List</a>
                    </div>
                </form>
            </div>
        </div>
    </div>

    @section Scripts {
        @{
            await Html.RenderPartialAsync("_ValidationScriptsPartial");
        }
    }
</body>
</html>
